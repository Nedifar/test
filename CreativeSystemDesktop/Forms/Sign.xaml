<Window x:Class="CreativeSystemDesktop.Forms.Sign"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CreativeSystemDesktop.Forms"
        mc:Ignorable="d"
        Title="Sign" Height="450" Width="800" MinWidth="400" MinHeight="150">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Авторизация" FontSize="24"/>
            <StackPanel Orientation="Horizontal" Margin="0 5" HorizontalAlignment="Right">
                <TextBlock Text="Логин" Margin="5 0"/>
                <TextBox x:Name="tbLogin" Text="jsdrg8x0zqp5@outlook.com" Width="140"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 5" HorizontalAlignment="Right">
                <TextBlock Text="Пароль" Margin="5 0"/>
                <PasswordBox x:Name="tbPas" Password="2L6KZG" Width="140"/>
            </StackPanel>
            <Button Content="Вход" Click="clSign" Margin="0 5"/>
            <Button Content="Вход как гость" Click="clSignHost"/>
        </StackPanel>
    </Grid>
</Window>
